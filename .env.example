# Application
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5173
THROTTLE_TTL=60
THROTTLE_LIMIT=30

# Integrations
DATABASE_URL=postgres://postgres:postgres@localhost:5432/noticore
REDIS_URL=redis://localhost:6379
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RUN_MIGRATIONS=true

# Auth
JWT_SECRET=change-me-access-secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=change-me-refresh-secret
JWT_REFRESH_EXPIRES_IN=7d

# Market Data
DOLAR_API_URL=https://dolarapi.com/v1
MARKET_CHUNK_DELAY_MS=300
MARKET_QUOTE_RETRY_ATTEMPTS=3
MARKET_QUOTE_RETRY_BASE_DELAY_MS=250
MARKET_STATUS_CACHE_TTL_SECONDS=30
MARKET_TOP_MOVERS_CACHE_TTL_SECONDS=60
